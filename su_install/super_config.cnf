CPEXTENSOES=(".pdf" ".txt" ".doc" ".docx" ".rtf" ".odt")	# exemplo em PHP: array(".gof",".jpg",".bmp");
CPEXTAMPLAS=(".[pP][dD][fF]" \
             ".[tT][xX][tT]" \
			 ".[dD][oO][cC]" \
			 ".[dD][oO][cC][xX]" \
			 ".[rR][tT][fF]" \
			 ".[oO][dD][tT]")

CPSOBRESCREVER="nao"                   # sobrescrever se arquivo já existir (sim,nao)
