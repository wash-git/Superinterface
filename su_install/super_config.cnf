CPALOGHTML="super_logshell.html"       # nome do arquivo de logs da Superinterface em formato html
CPPHPFILE="super_config_php.cnf"       # nome do arquivo de configuração gerado para o PHP
CPLOGSFILEGZ="super_logfile.tar"	   # nome base do arquivo compactado de logs
CPNOMECIDADES="super_cidades_maiusculas.txt"    # nome arquivo com nomes das cidades (em letras maiúsculas, sem controle)
CPNOMEINST="super_instituicoes_maiusculas.txt"  # nome arquivo com nomes das instituições (em letras maiúsculas, sem controle)
CPINSEREINST="super_csv_instituicoes.csv"          # arquivo com nomes de instituições para  tabela 'su_instituicoes'
